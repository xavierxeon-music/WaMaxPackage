<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<?xml-stylesheet href="./_c74_ref.xsl" type="text/xsl"?>
<c74object name="wa.graphics.box" as_bpatcher="0">
    <digest>draw a box</digest>
    <description>draw a box on a <o>wa.graphics.target</o></description>
    <metadatalist>
        <metadata name="author">Ralf Waspe</metadata>
        <metadata name="tag">WaMaxPackage</metadata>
        <metadata name="tag">WaMaxPackage</metadata>
    </metadatalist>
    <parser inlet_count="1"/>
    <misc name="Outputs"/>
    <objarglist>
        <objarg name="1" optional="1" type="int">
            <digest>x position</digest>
            <description>the x position of the upper left corner</description>
        </objarg>
        <objarg name="2" optional="1" type="int">
            <digest>y position</digest>
            <description>the y position  of the upper left corner</description>
        </objarg>
        <objarg name="3" optional="1" type="int">
            <digest>width</digest>
            <description>the width of the box</description>
        </objarg>
        <objarg name="4" optional="1" type="int">
            <digest>height</digest>
            <description>the height of the box</description>
        </objarg>
    </objarglist>
    <attributelist>
        <attribute size="1" name="color" get="1" type="symbol" set="1">
            <digest>color</digest>
            <description>rgb hex color of the box, default is  ffffff</description>
        </attribute>
        <attribute size="1" name="deviceName" get="1" type="symbol" set="1">
            <digest>targer device name</digest>
            <description>must be same devcieName as the <o>wa.graphics.target</o></description>
        </attribute>
        <attribute size="1" name="fill" get="1" type="int" set="1">
            <digest>fillt the box</digest>
            <description>set to 1 if box is to be filled. default is 1</description>
        </attribute>
    </attributelist>
    <methodlist>
        <method name="color" standard="0">
            <arglist>
                <arg name="" optional="0" type="symbol"/>
            </arglist>
            <digest>color</digest>
            <description>rgb hex color of the box, default is  ffffff</description>
        </method>
        <method name="fill" standard="0">
            <arglist>
                <arg name="" optional="0" type="int"/>
            </arglist>
            <digest>fillt the box</digest>
            <description>set to 1 if box is to be filled. </description>
        </method>
        <method name="height" standard="0">
            <arglist>
                <arg name="" optional="0" type="int"/>
            </arglist>
            <digest>height</digest>
            <description>set the height of the box</description>
        </method>
        <method name="width" standard="0">
            <arglist>
                <arg name="" optional="0" type="int"/>
            </arglist>
            <digest>width</digest>
            <description>set the width of the box</description>
        </method>
        <method name="x" standard="0">
            <arglist>
                <arg name="" optional="0" type="int"/>
            </arglist>
            <digest>x position</digest>
            <description>the x position</description>
        </method>
        <method name="y" standard="0">
            <arglist>
                <arg name="" optional="0" type="int"/>
            </arglist>
            <digest>y position</digest>
            <description>the y position</description>
        </method>
    </methodlist>
    <seealsolist/>
</c74object>
