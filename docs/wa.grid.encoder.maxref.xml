<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<?xml-stylesheet href="./_c74_ref.xsl" type="text/xsl"?>
<c74object name="wa.grid.encoder" patcher_type="standard">
    <digest>a grid enc16 device</digest>
    <description>a grid enc 16 controller device</description>
    <metadatalist>
        <metadata name="author">Ralf Waspe</metadata>
        <metadata name="tag">WaMaxPackage</metadata>
    </metadatalist>
    <misc name="Outputs">
        <entry name="int">
            <digest>encoder, button</digest>
            <description>(left) the encoder diff value<br/><br/>(middle) 1 if button is pressed</description>
        </entry>
        <entry name="list">
            <digest>color</digest>
            <description>the current LED color</description>
        </entry>
    </misc>
    <objarglist>
        <objarg name="id" optional="1" type="symbol">
            <digest>encoder id (11)</digest>
            <description>the id of the encoder<br/><br/>41 42 43 44<br/>31 32 33 34<br/>21 22 23 24<br/>11 12 13 14<br/><br/></description>
        </objarg>
    </objarglist>
    <attributelist>
        <attribute name="color" type="symbol">
            <digest>led color</digest>
            <description>the colot of the led</description>
        </attribute>
        <attribute name="name" type="symbol">
            <digest>ui name</digest>
            <description>the name to be shown in the device ui</description>
        </attribute>
    </attributelist>
    <methodlist>
        <method name="color" standard="0">
            <arglist>
                <arg name="color" optional="0" type="symbol"/>
            </arglist>
            <digest>led color</digest>
            <description>the colot of the led</description>
        </method>
        <method name="name" standard="0">
            <arglist>
                <arg name="name" optional="0" type="symbol"/>
            </arglist>
            <digest>ui name</digest>
            <description>the name to be shown in the device ui</description>
        </method>
    </methodlist>
    <seealsolist/>
</c74object>
