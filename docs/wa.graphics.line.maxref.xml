<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<?xml-stylesheet href="./_c74_ref.xsl" type="text/xsl"?>
<c74object as_bpatcher="0" name="wa.graphics.line">
    <digest>draw a line</digest>
    <description>draw a line on a <o>wa.graphics.target</o></description>
    <metadatalist>
        <metadata name="author">Ralf Waspe</metadata>
        <metadata name="tag">WaMaxPackage</metadata>
    </metadatalist>
    <parser inlet_count="1"/>
    <misc name="Outputs"/>
    <objarglist>
        <objarg name="x1" optional="1" type="int">
            <digest>the start x coordinate</digest>
            <description>the start x coordinate</description>
        </objarg>
        <objarg name="y1" optional="1" type="int">
            <digest>the start y coordinate</digest>
            <description>the start y coordinate</description>
        </objarg>
        <objarg name="x2" optional="1" type="int">
            <digest>the end x coordinate</digest>
            <description>the end x coordinate</description>
        </objarg>
        <objarg name="y2" optional="1" type="int">
            <digest>the end y coordinate</digest>
            <description>the end y coordinate</description>
        </objarg>
    </objarglist>
    <attributelist>
        <attribute get="1" name="color" set="1" size="1" type="symbol">
            <digest>color (ffffff)</digest>
            <description>rgb hex color of the box, default is  ffffff</description>
        </attribute>
        <attribute get="1" name="deviceName" set="1" size="1" type="symbol">
            <digest>target device name (push2)</digest>
            <description>must be same devcieName as the <o>wa.graphics.target</o></description>
        </attribute>
    </attributelist>
    <methodlist>
        <method name="color" standard="0">
            <arglist>
                <arg name="" optional="0" type="symbol"/>
            </arglist>
            <digest>color</digest>
            <description>rgb hex color of the box, default is  ffffff</description>
        </method>
        <method name="xEnd" standard="0">
            <arglist>
                <arg name="" optional="0" type="int"/>
            </arglist>
            <digest>the start x coordinate</digest>
            <description>the start x coordinate</description>
        </method>
        <method name="xStart" standard="0">
            <arglist>
                <arg name="" optional="0" type="int"/>
            </arglist>
            <digest>the start y coordinate</digest>
            <description>the start y coordinate</description>
        </method>
        <method name="yEnd" standard="0">
            <arglist>
                <arg name="" optional="0" type="int"/>
            </arglist>
            <digest>the end x coordinate</digest>
            <description>the end x coordinate</description>
        </method>
        <method name="yStart" standard="0">
            <arglist>
                <arg name="" optional="0" type="int"/>
            </arglist>
            <digest>the end y coordinate</digest>
            <description>the end y coordinate</description>
        </method>
    </methodlist>
    <seealsolist>
        <seealso name="wa.graphics.box"/>
        <seealso name="wa.graphics.circle"/>
        <seealso name="wa.graphics.hex_color"/>
        <seealso name="wa.graphics.target"/>
        <seealso name="wa.graphics.text"/>
    </seealsolist>
</c74object>
