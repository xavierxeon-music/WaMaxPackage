<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<?xml-stylesheet href="./_c74_ref.xsl" type="text/xsl"?>
<c74object name="wa.triggerchain.stage" patcher_type="0">
    <digest>trigger chain</digest>
    <description>send bang at specified timepoint, send message to next chain when this stage is finished</description>
    <metadatalist>
        <metadata name="author">Ralf Waspe</metadata>
        <metadata name="tag">WaMaxPackage</metadata>
    </metadatalist>
    <parser inlet_count="1"/>
    <misc name="Outputs">
        <entry id="1" name="bus">
            <digest/>
            <description>connect the next chain element</description>
        </entry>
        <entry id="2" name="start">
            <digest/>
            <description>bang when stage starts</description>
        </entry>
        <entry id="3" name="end">
            <digest/>
            <description>bang when length percent of duration has passed</description>
        </entry>
    </misc>
    <objarglist>
        <objarg name="1" optional="1" type="symbol">
            <digest>duration</digest>
            <description>duration of this stage in max time format</description>
        </objarg>
    </objarglist>
    <attributelist>
        <attribute get="1" name="length" set="1" size="1" type="symbol">
            <digest>length (1.)</digest>
            <description>when to send the end bang</description>
        </attribute>
    </attributelist>
    <methodlist/>
    <seealsolist/>
</c74object>
