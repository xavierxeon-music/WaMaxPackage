<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<?xml-stylesheet href="./_c74_ref.xsl" type="text/xsl"?>
<c74object name="wa.push2.button" as_bpatcher="0">
    <digest>a button on a push device</digest>
    <description>a button on a push device</description>
    <metadatalist>
        <metadata name="author">Ralf Waspe</metadata>
        <metadata name="tag">WaMaxPackage</metadata>
        <metadata name="tag">WaMaxPackage</metadata>
    </metadatalist>
    <parser inlet_count="1"/>
    <misc name="Outputs">
        <entry name="active" id="1">
            <digest/>
            <description>In <i>"click"</i>mode active is 1 for as long as the button is pressed.<br/>In <i>"toggle"</i> mode active is 1 between to consecutive button presses.</description>
        </entry>
        <entry name="pressed" id="2">
            <digest/>
            <description>bang when button is pressed.</description>
        </entry>
        <entry name="released" id="3">
            <digest/>
            <description>bang when button is released.</description>
        </entry>
    </misc>
    <objarglist>
        <objarg name="name" optional="1" type="symbol">
            <digest>the name of the button</digest>
            <description>the name of the button. see <o>wa.push.device~</o> for details</description>
        </objarg>
    </objarglist>
    <attributelist>
        <attribute size="1" name="color" get="1" type="symbol" set="1">
            <digest>color of the button</digest>
            <description>rgb hex color of the button, default is  green</description>
        </attribute>
        <attribute size="1" name="downColor" get="1" type="symbol" set="1">
            <digest>color of the pressed button</digest>
            <description>rgb hex color of the button, default is  blue</description>
        </attribute>
        <attribute size="1" name="toggle" get="1" type="int" set="1">
            <digest>make this a toggle button</digest>
            <description>make this a toggle button, default 0</description>
        </attribute>
    </attributelist>
    <methodlist>
        <method name="color" standard="0">
            <arglist>
                <arg name="" optional="0" type="symbol"/>
            </arglist>
            <digest>color of the button</digest>
            <description>rgb hex color of the button, default is  ffffff</description>
        </method>
        <method name="downColor" standard="0">
            <arglist>
                <arg name="" optional="0" type="symbol"/>
            </arglist>
            <digest>color of the pressed button</digest>
            <description>rgb hex color of the button, default is  blue</description>
        </method>
        <method name="forceActive" standard="0">
            <arglist>
                <arg name="" optional="0" type="int"/>
            </arglist>
            <digest>force the active state</digest>
            <description>force the active state</description>
        </method>
        <method name="setButton" standard="0">
            <arglist>
                <arg name="" optional="0" type="symbol"/>
            </arglist>
            <digest>set the button id</digest>
            <description>set the button id</description>
        </method>
        <method name="toggle" standard="0">
            <arglist>
                <arg name="" optional="0" type="int"/>
            </arglist>
            <digest>make this a toggle button</digest>
            <description>make this a toggle button, default 0</description>
        </method>
    </methodlist>
    <seealsolist/>
</c74object>
